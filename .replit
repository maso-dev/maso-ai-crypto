run = "python replit_startup.py"
entrypoint = "replit_startup.py"
modules = ["python-3.11"]

[deployment]
run = ["sh", "-c", "python replit_startup.py"]
healthcheck = "/health"

[env]
PYTHONPATH = "/home/runner/$REPL_SLUG"
RELOAD = "false"
PORT = "8000"

[nix]
channel = "stable-25_05"
packages = ["bash", "libxcrypt"]

[packager]
language = "python3"
ignoredPackages = ["unit_tests"]

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = true

[packager.upm]
enabled = true
language = "python3"

[languages.python3]
pattern = "**/*.py"
syntax = "python"

[languages.python3.languageServer]
start = ["pylsp"]

[[ports]]
localPort = 8000
externalPort = 80
