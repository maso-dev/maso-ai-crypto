{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "api/index.py"
        }
    ],
    "crons": [
        {
            "path": "/populate_crypto_news_rag",
            "schedule": "0 6 * * *"
        },
        {
            "path": "/admin/health",
            "schedule": "0 */6 * * *"
        }
    ],
    "functions": {
        "api/index.py": {
            "maxDuration": 30
        }
    },
    "env": {
        "PYTHONPATH": "."
    }
}
