{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/index.py"
        }
    ],
    "crons": [
        {
            "path": "/crypto_news/populate",
            "schedule": "0 6 * * *"
        },
        {
            "path": "/admin/health",
            "schedule": "0 */6 * * *"
        }
    ],
    "functions": {
        "api/index.py": {
            "maxDuration": 30
        }
    }
}
